<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TimeSeriesFragment">

    <TextView
        android:id="@+id/TimeSeries_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:text="Loading..." />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select a device..."
        android:id="@+id/TimeSeries_textViewDeviceSelector"
        android:layout_margin="5dp"
        android:maxLines="2"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select a channel..."
        android:id="@+id/TimeSeries_textViewChannelSelector"
        android:layout_below="@id/TimeSeries_textViewDeviceSelector"
        android:layout_margin="5dp"
        android:maxLines="3"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TimeSeries_textViewChannelSelector"
        android:layout_above="@id/TimeSeries_Status"
        android:layout_margin="5dp"
        android:id="@+id/TimeSeries_messages_scroll"
        android:fillViewport="true"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TimeSeries_textViewMessages"
            android:layout_gravity="bottom"
            android:text=""
            />

    </ScrollView>


</RelativeLayout>
