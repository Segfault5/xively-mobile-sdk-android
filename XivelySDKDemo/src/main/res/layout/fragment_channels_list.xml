<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChannelsFragment">

    <TextView android:id="@+id/channels_status" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:gravity="start|top"
        android:text="Loading channel list..."
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        />

    <TextView android:id="@android:id/empty" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" />

</FrameLayout>
